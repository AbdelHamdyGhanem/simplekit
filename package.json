{
  "name": "simplekit",
  "version": "0.0.2",
  "description": "A very simple user interface toolkit for teaching UI architecture.",
  "author": "Daniel Vogel",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nonsequitoria/simplekit.git"
  },
  "bugs": "https://github.com/nonsequitoria/simplekit/issues",
  "type": "module",
  "exports": {
    "./imperative": {
      "import": "./dist/imperative.js",
      "require": "./dist/imperative.cjs",
      "types": "./dist/imperative.d.ts"
    },
    "./canvas": {
      "import": "./dist/canvas.js",
      "require": "./dist/canvas.cjs",
      "types": "./dist/canvas.d.ts"
    },
    "./utility": {
      "import": "./dist/utility.js",
      "require": "./dist/utility.cjs",
      "types": "./dist/utility.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsup --watch",
    "build": "tsup",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
